<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:orientation="horizontal"
    android:paddingTop="0dp"
    android:paddingBottom="8dp"
    android:visibility="visible"
    android:weightSum="10"
    tools:visibility="visible">213

    <CheckBox
        android:id="@+id/sendCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:checked="true"
        android:clickable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:orientation="vertical"
        android:paddingTop="0dp"
        android:paddingBottom="2dp"
        android:visibility="visible"
        tools:visibility="visible">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:visibility="visible"
            android:weightSum="9"
            tools:visibility="visible">

            <TextView
                android:id="@+id/jan_code"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/item_name"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:layout_weight="4" />

            <TextView
                android:id="@+id/pop_type"
                android:layout_width="55dp"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/display_price"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:visibility="visible"
            android:weightSum="9"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:visibility="visible"
                android:layout_weight="6"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/status_header"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="ステータス: " />

                <ProgressBar
                    android:id="@+id/progressBarPending"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center|top"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/correctImage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center|top"
                    app:srcCompat="@drawable/ic_baseline_check_24"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/incorrectImage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center|top"
                    app:srcCompat="@drawable/ic_baseline_clear_24"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/check_comment"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:layout_weight="4" />

            </LinearLayout>

            <TextView
                android:id="@+id/correct_price"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:layout_weight="3" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>