<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:visibility="visible"
    android:weightSum="8"
    tools:visibility="visible">

    <CheckBox
        android:id="@+id/sendCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:checked="true"
        android:clickable="true" />

    <TextView
        android:id="@+id/jan_code"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/pop_type"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/display_price"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <ProgressBar
        android:id="@+id/progressBarPending"
        style="?android:attr/progressBarStyle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center|top"
        android:layout_weight="1"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/correctImage"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_gravity="center|top"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_baseline_check_24"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/incorrectImage"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_gravity="center|top"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_baseline_clear_24"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/status_header"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ステータス" />

    <TextView
        android:id="@+id/correct_price"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/check_comment"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>